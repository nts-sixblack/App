<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        tools:context=".ListProductActivity">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="402dp"
            android:layout_height="496dp"
            android:id="@+id/listAllProduct" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="1dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="409dp"
            android:layout_height="76dp" android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/listAllProduct" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:layout_marginEnd="1dp" app:layout_constraintEnd_toEndOf="parent">
        <Button
                android:text="Cart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/btnCart" android:layout_weight="1"
                android:onClick="cart"/>
        <Button
                android:text="Add New"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/btnNewProduct" android:layout_weight="1"
                android:onClick="newProduct"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>