<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imgCartItem"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp" android:layout_marginStart="32dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="147dp"
            android:layout_height="54dp" android:id="@+id/txtNameUserCartItem"
            tools:ignore="MissingConstraints" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="36dp"
            android:layout_marginStart="244dp" android:textSize="20sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="148dp"
            android:layout_height="52dp" android:id="@+id/txtNameProductCartItem"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNameUserCartItem" android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/imgCartItem" android:textSize="20sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="148dp"
            android:layout_height="50dp" android:id="@+id/txtPriceProductCartItem"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNameProductCartItem" android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/imgCartItem" android:textSize="20sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>